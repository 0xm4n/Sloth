page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.tablist {
  display: flex;
  background: #FD6460;
  height: 10pt;
  padding-left: 60pt;
  padding-right: 60pt;
  padding-top:5pt;
  padding-bottom: 10pt;
   align-items: center;
}

.tablist .item {
  flex: auto;
    display: flex;
    position: relative;
    justify-content: center;
   
    font-size: 9pt;
    color: white;
    background-color: #FD6460;
    width: 10pt;
    height: 24pt;
}

.tablist .item::after
{
  border: none;
}

.tablist .item.select {
    background-color: white;
    color: black;
}

.tablist .item.select::after {
    content: "";
    height: 3rpx;
    display: block;
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    background:white;
}

.content{
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
