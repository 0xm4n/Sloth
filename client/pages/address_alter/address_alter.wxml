<view class="container">
  <form bindsubmit='formSubmit'>
    <view class="text_each_row">
      <view class="text">联系人</view>
      <input name="namearea" placeholder="联系人姓名" class="nameinput" />
    </view>
    <view class="text_each_row">
      <view class="text">手机号码</view>
      <input name="phonearea" placeholder="可以联系到你的号码" class="phoneinput" />
    </view>
    <view class="text_each_row">
      <view class="text">地址</view>
      <input name="addressarea" placeholder="学校/校区/宿舍号" class="addrinput" />
    </view>
    <view class='button_save_address'>
      <button formType='submit'>保存地址</button>
    </view>
  </form>
</view>